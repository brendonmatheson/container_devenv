FROM debian:9.5

RUN mkdir -p /root/.ssh
COPY files/id_rsa /root/.ssh
COPY files/id_rsa.pub /root/.ssh
RUN chmod 700 /root/.ssh
RUN chmod 600 /root/.ssh/id_rsa

SETUP

ENV LANG "en_US.UTF-8"

CMD ["/bin/bash"]
